@{
    ViewData["Title"] = "Fresh.ly | Home";
}




<div style="margin:0;margin-top:1em;display:flex;">

    <div style="width: 30%; background-color: #7cbf34;height:85vh;display:flex;flex-direction:column;justify-content:space-between;">

        <div>
            <h1 style="font-weight:bold;text-align:center;margin-top:0.5em;color:white;">My Cart</h1>


            <hr />

            <table class="table table-hover" style="height:30%">
                <thead>
                    <tr>
